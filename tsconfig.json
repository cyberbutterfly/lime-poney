{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "types": [],
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "useCache": true
  }
}
